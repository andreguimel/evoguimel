# ===========================================
# EVOLUTION API - STACK GITHUB (SEGUNDA INSTÂNCIA)
# ===========================================

# ===========================================
# SERVIDOR
# ===========================================
SERVER_NAME=evolution-github
SERVER_TYPE=http
SERVER_PORT=8080
SERVER_URL=http://localhost:8081
SERVER_DISABLE_DOCS=false
SERVER_DISABLE_MANAGER=false

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE
CORS_CREDENTIALS=true

# ===========================================
# AUTENTICAÇÃO
# ===========================================
AUTHENTICATION_API_KEY=CHANGE_ME_GITHUB
AUTHENTICATION_EXPOSE_IN_FETCH_INSTANCES=false

# ===========================================
# LOGS
# ===========================================
LOG_LEVEL=ERROR,WARN,DEBUG,INFO,LOG,VERBOSE,DARK,WEBHOOKS,WEBSOCKET
LOG_COLOR=true
LOG_BAILEYS=error

# ===========================================
# IDIOMA
# ===========================================
LANGUAGE=pt-BR

# ===========================================
# BANCO DE DADOS
# ===========================================
DATABASE_PROVIDER=postgresql
# Conexão usando o serviço interno 'evolution-postgres' e DB dedicado desta stack
DATABASE_CONNECTION_URI=postgresql://postgres:postgres_password@evolution-postgres:5432/evolution_db_github?schema=evolution_api
DATABASE_CONNECTION_CLIENT_NAME=evolution_github

# Configurações de salvamento de dados
DATABASE_SAVE_DATA_INSTANCE=true
DATABASE_SAVE_DATA_NEW_MESSAGE=true
DATABASE_SAVE_MESSAGE_UPDATE=true
DATABASE_SAVE_DATA_CONTACTS=true
DATABASE_SAVE_DATA_CHATS=true
DATABASE_SAVE_DATA_HISTORIC=true
DATABASE_SAVE_DATA_LABELS=true
DATABASE_SAVE_IS_ON_WHATSAPP=true
DATABASE_SAVE_IS_ON_WHATSAPP_DAYS=7
DATABASE_DELETE_MESSAGE=false

# Credenciais do Postgres usado por esta stack
POSTGRES_DATABASE=evolution_db_github
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=postgres_password

# ===========================================
# REDIS
# ===========================================
CACHE_REDIS_ENABLED=true
# Usa o alias interno do serviço Redis nesta stack
CACHE_REDIS_URI=redis://evolution-redis:6379
CACHE_REDIS_PREFIX_KEY=evolution-cache-github
CACHE_REDIS_TTL=604800

# Cache local (fallback)
CACHE_LOCAL_ENABLED=true
CACHE_LOCAL_TTL=86400

# ===========================================
# WEBHOOK / WEBSOCKET (opcional)
# ===========================================
WEBSOCKET_ENABLED=false
WEBSOCKET_GLOBAL_EVENTS=false
WEBHOOK_GLOBAL_ENABLED=false
WEBHOOK_GLOBAL_URL=
WEBHOOK_GLOBAL_WEBHOOK_BY_EVENTS=false